@model IEnumerable<Product>

@{
    ViewBag.Title = "Product";
    Layout = "_AdminLayout";
}

@if (Model.Count() == 0) {

    <div class="text-center m-2">
        <form asp-action="SeedDatabase" method="post">
            <button type="submit" class="btn btn-danger">Seed Database</button>
        </form>
    </div>

} else {

    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-right">ID</th>
            <th>Name</th>
            <th class="text-right">Цена</th>
            <th>Тип</th>
            <th class="text-center">Изображение</th>
            <th class="text-center">Функции</th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td class="text-right">@item.ProductID</td>
                <td>@item.Name</td>
                <td class="text-right">@item.Price.ToString("c")</td>
                <td>@item.TypeProducts.Name</td>
                <td class="text-center">@if(0 < item.Image?.Count())
                    {
                        <p>&#10004;</p>
                    }
                </td>
                <td class="text-center">
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-productId="@item.ProductID">
                            Изменить
                        </a>
                        <input type="hidden" name="ProductID" value="@item.ProductID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</div>
