 <div class="col mb-4">
    <div class="card h-100">
        <a asp-area="" asp-controller="Catalog" asp-action="Details" asp-route-id="@Model.ProductID" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
            @if(null != Model.Image)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Image)" class="card-img-top" alt="image">
            }
            else
            {
                <img src="" class="card-img-top" alt="not image">
            }
            <div class="card-body">
              <h5 class="card-title">@Model.Name</h5>
              <p class="card-text text-center text-lowercase font-italic text-muted">@Model.Description</p>
              <p class="card-text"><small class="text-muted">@Model.Price.ToString("c")</small></p>
            </div>
        </a>
      </div>
  </div>
